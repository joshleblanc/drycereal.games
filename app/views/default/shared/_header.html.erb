<div class="hero h-[65vh] bg-base-200 relative" style="background-image: url(<%= hero_url %>)">
  <div class="swoopy absolute w-full bottom-0 h-[50px]"></div>

  <div class="hero-content text-center text-neutral-content">
    <div class="max-w-md">
      <% if local_assigns[:title].present? %>
        <h1 class="text-5xl font-bold drop-shadow"><%= title %></h1>
      <% end %>
      <% if local_assigns[:headline].present? %>
        <p class="py-6"><%= headline %></p>
      <% end %>
    </div>
  </div>
</div>