<%= render("default/shared/header",
           title: current_page.title,
           headline: link_to("Play Now", content.text(:play_link), class: "btn btn-accent"),
           exclude_link: content.text(:play_link).empty?,
           hero_url: content.image_url(:hero_image)
    )
%>

<div class="w-full p-4">
  <div class="container mx-auto mt-12 mb-8 px-4">
    <div class="prose max-w-full mb-4">
      <%= content.html :body %>
    </div>

    <div class="flex flex-wrap justify-center">
      <% images(:supporting_images) do |image| %>
        <div class="card shadow w-48 hover:shadow-white ease-in-out duration-300 m-4">
          <figure><%= image_tag content.image_url(image) %></figure>
        </div>
      <% end %>
    </div>
  </div>
</div>