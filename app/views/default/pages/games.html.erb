<%= render("default/shared/header",
           title: current_page.title,
           headline: content.text(:headline),
           hero_url: content.image_url(:hero_image)
    )
%>

<div class="w-full bg-[#1B1B1E] text-white border-b-4 border-b-accent-content p-4">
  <div class="container mx-auto mt-12 mb-8 px-4">
    <div class="mb-4">
      <%= content.html :body %>
    </div>
    <div class="flex flex-wrap justify-center">
      <% games.each do |game| %>
        <div class="card shadow w-96 hover:shadow-white ease-in-out duration-300 m-4">
          <%= link_to game.materialized_path do %>
            <figure><%= image_tag game.content.image_url :cover_image %></figure>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>