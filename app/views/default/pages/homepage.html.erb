<%= render("default/shared/header",
           hero_url: content.image_url(:hero_image)
    )
%>

<div class="bg-base-200 min-w-[20%] basis-[min-content] grow border border-primary">
  <div class="p-4">
    <div class="flex justify-center">
      <div class="p-4 text-center text-bold text-lg">
        Newest Release
        <div class="divider"></div>
      </div>

    </div>

    <h1 class="text-4xl font-bold justify-center text-center flex p-4"><%= content.text :headline %></h1>
  </div>

</div>


<div class="prose min-w-[20%] text-center basis-[min-content] grow p-12 border border-primary">
  <%= content.html :body %>
</div>


<% game_page = Spina::Page.find_by(name: "games") %>
<% packages_page = Spina::Page.find_by(name: "packages") %>

<%= render "default/shared/slice", image: content.image_url(:games_image), title: "Games", to: game_page.materialized_path  %>
<%= render "default/shared/slice", image: content.image_url(:packages_image), title: "Packages", to: packages_page.materialized_path  %>
